---
import NavBar from './NavBar.astro'
import LinkButton from './LinkButton.astro'
import HeaderLink from './HeaderLink.astro'
import { getAppUrl, LOGIN_URL } from '../siteConfig.ts'
---

<header>
    <NavBar>
        <HeaderLink href="/artiklar">Kunskapsbank</HeaderLink>
        <HeaderLink href={LOGIN_URL} class="ga-login">Logga in</HeaderLink>
        <LinkButton href={getAppUrl()} kind="filled" style="font-weight: 500; font-size: 17px" class="ga-begin-signup">
            Skapa nytt konto
        </LinkButton>
    </NavBar>

    <style>
        header {
            margin: 0 auto;
            max-width: var(--header-width);
        }
    </style>
</header>
