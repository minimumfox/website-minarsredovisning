---
import Hamburger from '../icons/Hamburger.astro'
import CrossLarge from '../icons/CrossLarge.astro'
import LogoAndName from '../domain/LogoAndName.astro'
---

<style>
    .small-screen-only {
        display: block;
    }
    .big-screen-only {
        display: none;
    }
    @media (min-width: 799px) {
        .small-screen-only {
            display: none;
        }
        .big-screen-only {
            display: block;
        }
    }
</style>
<nav class="big-screen-only">
    <div style="padding: 20px 0px; display: flex; justify-content: space-between; align-items: center;">
        <div style="margin-top: -4px">
            <LogoAndName logoSize={50} />
        </div>
        <div style="display: flex; align-items: center; gap: 30px; margin-right: 80px">
            <slot />
        </div>
    </div>
</nav>
<nav class="small-screen-only">
    <div
        id="menu"
        style="position: absolute; background: #fff; width: 100vw; left: calc(-1 * 100vw); height: 100vh; z-index: 999; overflow: hidden; transition: left 150ms ease-in-out;"
    >
        <div style="padding: 10px; width: 100vw; display: flex; flex-direction: column; gap: 30px">
            <div style="width: 95vw; display: flex; justify-content: space-between; align-items: center">
                <LogoAndName logoSize={35} name="" />
                <div id="closeBtn" style="font-size: 1.7rem; font-weight: 800">
                    <CrossLarge />
                </div>
            </div>

            <slot />
        </div>
    </div>
    <div
        style="padding: 10px; width: 100vw; max-width: 100vw; display: flex; justify-content: space-between; align-items: center"
    >
        <LogoAndName logoSize={35} />
        <div style="font-size: 1.7rem; font-weight: 800" id="openBtn">
            <Hamburger style="margin-right: 20px; color: #000" />
        </div>
    </div>
</nav>
<script>
    document.getElementById('openBtn')?.addEventListener('click', () => {
        document.getElementById('menu')!.style.left = '0'
    })
    document.getElementById('closeBtn')?.addEventListener('click', () => {
        document.getElementById('menu')!.style.left = 'calc(-1 * 100vw)'
    })
</script>
