---
import CollageImage from './CollageImage.astro'
import bildA from './bildA.webp'
import bildB from './bildB.webp'
import bildC from './bildC.webp'
import bildD from './bildD.webp'
import bildE from './bildE.webp'

const { ...rest } = Astro.props
const GRID_ROW_HEIGHT = 110
---

<style>
    .collage {
        display: grid;
        gap: 20px;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: repeat(5, 1fr);
        grid-template-areas:
            'a b .'
            'a b c'
            'a d c'
            'e d c'
            'e d .';
    }
</style>
<div {...rest}>
    <div class="collage">
        <CollageImage src={bildA} height={GRID_ROW_HEIGHT * 3} style="grid-area: a; align-self: end" />
        <CollageImage src={bildB} height={GRID_ROW_HEIGHT * 2} style="grid-area: b" />
        <CollageImage src={bildC} height={GRID_ROW_HEIGHT * 3} style="grid-area: c" />
        <CollageImage src={bildD} height={GRID_ROW_HEIGHT * 3} style="grid-area: d" />
        <CollageImage src={bildE} height={GRID_ROW_HEIGHT * 2} style="grid-area: e" />
    </div>
    <style></style>
</div>
